[core]
	excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global
  autocrlf = input
  safecrlf = warn
[pager]
  diff = "delta --syntax-theme=ansi"
  blame = "delta --syntax-theme=ansi"
  show = "delta --syntax-theme=ansi"
[commit]
  gpgsign = true
[push]
  default = simple
[fetch]
  # Prune branches that no longer exist remote. Same for tags.
  prune = true
  pruneTags = true
[user]
  useConfigOnly = true
	name = lucywoodman
	email = hello@lucywoodman.com
[diff]
  indentHeuristic = on
  noprefix = true
  colorMoved = default
[interactive]
  diffFilter = "delta --color-only --features=interactive --syntax-theme=ansi"
[diff "nodiff"]
  command = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
	enabled = 1
[submodule]
	recurse = true
	fetchJobs = 0

# Custom plugins:
[delta]
  navigate = false
  inspect-raw-lines = false
  line-numbers = true

  # decorations
  file-style = none
  file-decoration-style = none
  minus-style = syntax auto
[delta "interactive"]
  keep-plus-minus-markers = false

# Styling:
[color]
  ui = true
[color "diff"]
  meta = black
  frag = blue bold
  commit = black bold
  old = red bold
  new = green bold
  whitespace = red reverse

# Aliases:
[alias]
  publish = "!git push origin $(git symbolic-ref --short HEAD) -u"
  push-fork = "!git push fork $(git symbolic-ref --short HEAD) -u"
  pull-fork = "!git pull fork $(git symbolic-ref --short HEAD)"
  # Origin: https://stackoverflow.com/a/33548037/4842742
  prune-branches = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D \"$branch\"; done"
  main = "!git checkout main > /dev/null 2>&1 || git checkout master"
  patch = "!git --no-pager diff"

[diff "generated"]
	binary = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[tag]
	forceSignAnnotated = false

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig_local
[gitbutler]
	aiOpenAIKeyOption = bringYourOwn
	aiModelProvider = ollama
